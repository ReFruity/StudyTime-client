@import '../_variables'

#professors-show
  .professor
    margin-bottom 20px
    .container
      position relative
    img
      position absolute
      top 25px
      width 187px
      height 187px
      border-radius 94px
    .full-name-wrap
      font-size 24px
      background #d5e2ea
      padding 30px 0 18px
      .full-name
        margin-left 220px
    .card
      background $brand-info-bg
      table
        margin 30px 0 35px 220px
        font-size 16px
        tr
          td
            padding-bottom 8px
          td:first-child
            font-weight bold
            padding-right: 25px

    @media $media-max-phone
      img
        top 0
        width: 54px
        height: 54px
      .full-name-wrap
        font-size 18px
        background none
        padding 8px 0
        .full-name
          margin-left: 70px
          font-weight 300
      .card
        table
          margin 30px 0 25px 10px

  .professor-schedule
    margin-bottom 40px
    .day
      position relative
      &.current
        .circle
          background: $brand-warning
        .day-of-week
          color: $brand-warning
        img.current-event
          display block
      .circle
        width 23px
        height 23px
        background $brand-info-bg
        border-radius 12px
        position absolute
      .content
        padding-left 25px
        margin-left 10px
        border-left: 3px solid $brand-info-bg
        padding-bottom 10px
        .header
          margin-bottom 13px
          font-size 18px
          color: $brand-primary
          .day-of-week
            display inline-block
            font-weight bold
            margin-right 20px
          .date
            display inline-block
            font-weight 200
        .events
          .event
            font-size 16px
            font-weight 300
            margin-bottom 10px
            position relative
            img.current-event
              display none
              position absolute
              top: 4px
              left -32px
            div
              display inline-block
              margin-right 10px
            .subject
              color: #aaa
            .room
              color: $brand-info
              font-weight 500

    @media $media-max-phone
      .sched-nav
        display none
      .day
        .circle
          top 5px
        .content
          .header
            margin-bottom 5px
            .day-of-week
              font-size 24px
              font-weight bold
          .events
            .event
              img.current-event
                top 10px
              div
                display block
                font-weight normal
              .address, .room
                display inline-block
              .time
                font-size 24px
                font-weight 500

