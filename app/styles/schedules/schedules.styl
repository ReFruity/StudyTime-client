@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

// Navigation
.schedule-header
  .navbar
    background: #fff
    border none
    max-height: 50px
    overflow: hidden

    .navbar-header
      padding: 0 15px 15px 0
      .back-btn
        background #3baba1

    .navbar-brand
      padding: 15px 15px 15px
      &:active, &:hover, &.active
        color: #000000
    .navbar-link
      padding: 15px 20px 0 0
      text-decoration: none
      color: #00A000
      &:active, &:hover, &.active
        color: #000000
    .navbar-text
      padding: 3px 130px
  .btn
    margin-top: 7px

#schedule-greed
  // Desktop schedule
  .lessons-desktop
    .lessons-row
      // Class number
      .lesson-time-wrapper
        float left
        height: 50px
        width: 50px
        margin-left - 50px
        color #4b5456
        text-align center
        padding 7px 0
        &.current
          color: #f16520

        .lesson-time
          height: 50px
          width: 50px
          margin-left 10px
          .lesson-time-number, .lesson-time-start
            margin: 0

      // Main cell style
      .lesson-cell
        border: 1px solid #f5f8fa
        border-bottom: none
        overflow: hidden
        height: 50px
        &:active, &:hover, &.active
          cursor: pointer
        &.current
          border: 1px solid #f16520

        // Atom class positioning
        .lesson-parity-0
          margin-top: 15px
        .lesson-parity-1
          margin-top: 3px
          margin-bottom: -22px
        .lesson-parity-2
          margin-top: 22px
        .lesson-half-1
          float: left
          text-align: left
          margin-left: 10px
        .lesson-half-2
          float: right
          text-align: right
          margin-right: 10px

    // Rounded dow corners
    > :first-child + div.lessons-row
      .lesson-cell
        border-radius: 10px 10px 0 0
    > :last-child
      .lesson-cell
        border-bottom: 1px solid #f5f8fa
        border-radius: 0 0 10px 10px

  // Mobile schedule
  .lessons-mobile
  .lesson-cell-mobile
    border-left: none
    border-right: none

  .lesson-cell-mobile-bottom
    border-bottom: 1px solid #f5f8fa
  .lesson-cell-title
    border: none
    &:active, &:hover, &.active
      cursor: default
  .lesson-cell-title-day
    text-align: center
    padding: 5px
    margin: 10px 40px
    color: #4b5456
    &.current
      border-radius: 10px 10px 10px 10px
      background: #f16520
      color: #FFFFFF
  .lesson-cell-title-date
    text-align: right
    margin: -10% 0
    color: #FFFFFF
    &.current
      color: #6b787b

  .lesson-time-mobile
    margin-left: 0

.lesson-details-container
  overflow hidden
  background: #ebebeb
  width: 100%
  padding 0
  margin 0

.lesson-details
  .lesson-info-icons
    margin 0 0 0 - 37px
    padding 15px 0
    float: left
    width: auto
    height: 100%
    a
      margin: 0 0 10px 0
  .lesson-info-data
    padding 15px 25px
    float: left
    .lesson-name
      font-size: 17pt
      color: #444444
    .lesson-lecturer
      color: #207E62
      cursor: pointer
    .lesson-start-time
      font-size: 14pt
      color: #444444
  .lesson-info-files
    float: left
    display: inline-block
    padding: 12px 0 0 30px
    width: 90% /*Temp*/
    .lesson-info-files-header
      width: 100%
      h4
        display: inline-block
        margin: 0 10px 0 0
      #search-teacher
        width: 250px
        height: 30px
    .lesson-info-file-search
      width: 100%
      height: 40px
      padding: 10px 0 0 0
      select
        float: left
        width: 20%
        height: 30px
      input
        float: left
        width: 60%
        height: 30px
    .lesson-info-file-block
      height: 55px
      border: 2px #929292 solid
      border-radius: 5px
      background-color: #FFFFFF
      margin: 10px 10px 0 0
      float: left
      .btn-edit
        float: right
        margin: 2px
      .file-name
        float: left
        padding: 0 10px 0 10px
        margin-top: 5px
        border-right: 1px solid #606060
        color: #207E62
        cursor: pointer
      .file-size
        float: left
        padding: 5px 0 0 10px
        color: #606060
      .file-comment
        float: left
        padding: 3px 0 0 10px
        color: #7A7A7A
      &:hover
        background-color: #F7F6F6

.tests-and-exams
  font-family: "Helvetica Light"
  max-width: 750px
  margin: 0 auto 20px
  #test-title
    color: #4b5456
    font-size: 1.6em
    display: block
    margin-bottom: 15px
  #exam-title
    color: #4b5456
    font-size: 1.6em
    display: block
    margin: 25px 0 15px
  .info
    .date
      font-family: Arial
      font-size: 1.3em
      font-weight: 700
      color: #4b5456
      margin-right: 15px
    .time
      font-size: 1.1em
      color: #4b5456
      margin-right: 15px
    .name
      font-size: 1.3em
      color: #f16520
      margin-right: 15px
    .teacher
      font-size: 1.3em
      font-style: oblique
      color: #aaaaaa
      margin-right: 15px
    .audit
      font-size: 1.1em
      color: #4b5456
