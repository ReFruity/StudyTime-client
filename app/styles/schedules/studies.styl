@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"


.group-sched
  .no-staff
    background $brand-info-bg
    text-align center
    padding 20px
    margin 10px 0
    button
      margin 10px

  .group-star
    padding 40px 0 20px 0
    h4
      display inline
      margin-right 10px
    .main-staff, .supp-staff
      vertical-align middle
      display inline-block
      border 1px solid #ddd
      background #eee
      margin-right 5px
      width 40px
      height 40px
    .supp-staff
      opacity 0.5
    .btn
      margin-left 5px

  .week-even
    .parity-1
      opacity 0.2
  .week-odd
    .parity-2
      opacity 0.2

  .cell-atom
    display block
    position absolute
    border-left 1px solid $sched-border-color
    border-right 1px solid $sched-border-color
    padding 0 12px
    overflow hidden
    white-space nowrap
    background #fff
    z-index 10000
    text-align center
    color $text-color
    font-size $font-size-medium
    font-weight 300
    text-decoration none

    &.parity-0
      height $sched-data-height
      line-height $sched-data-height
      z-index 10000
    &.parity-1
      background #fff
      line-height ($sched-data-height/2)
      font-size $font-size-base
      top 0
      bottom (($sched-data-height/2) - 1)
      border-bottom 1px solid $sched-border-color
      z-index 10
    &.parity-2
      line-height ($sched-data-height/2)
      font-size $font-size-base
      top (($sched-data-height/2) - 1)
      bottom 0
      border-top 1px solid $sched-border-color
      z-index 10
    &.hg-0
      left -2px
      right -2px
    &.hg-1
      background #fff
      left -2px
      right 50%
      z-index 10
    &.hg-2
      background #fff
      right -2px
      left 50%
      z-index 10

    &:hover
      background $sched-cell-hover-bg

    span
      display inline
    .stico-lection
      margin-right 5px
    .atom-places
      color $brand-info
      display inline
      margin-left 7px
      font-weight 400
      span
        margin-left 5px

  .cell-wrapper
    position relative
    height 100%
    width 100%

    .editor-cell
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 100000

    .editor-atom
      z-index 100000
      opacity 0
      line-height $line-height-computed
      padding 5px 10px
      text-align left
      transition(0.1s opacity)
      background $brand-info
      color #fff
      white-space pre-wrap

      &:hover, &.current
        opacity 0.8
