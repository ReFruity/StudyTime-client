@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"


.group-sched
  .no-staff, .welcome-staff
    background-color $brand-info-bg
    background-image url(../images/ballons.png)
    text-align center
    padding 20px
    margin 10px 0

    button
      margin 10px

  .group-star
    padding 40px 0 20px 0
    h4
      display inline
      margin-right 10px
    .main-staff, .supp-staff
      vertical-align middle
      display inline-block
      border 1px solid #ddd
      background #eee
      margin-right 5px
      width 40px
      height 40px
    .supp-staff
      opacity 0.5
    .btn
      margin-left 5px

  .week-even
    .parity-1
      opacity 0.2
  .week-odd
    .parity-2
      opacity 0.2

  .cell-wrapper
    position relative
    height 100%
    width 100%

    .editor-cell
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 100000

    .editor-atom
      z-index 100000
      opacity 0
      line-height $line-height-computed
      padding 5px 10px
      text-align left
      transition(0.1s opacity)
      background $brand-info
      color #fff
      white-space pre-wrap

      &:hover, &.current
        opacity 0.8
