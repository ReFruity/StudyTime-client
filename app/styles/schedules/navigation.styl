@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"


// Schedule
#schedule-greed
  .desktop
    // Navigation
    .schedule-header
      user-select(none)
      .navbar
        background #fff
        border none
        height $sched-nav-height
        min-height 0
        margin-bottom 0
        white-space nowrap

        // Remove link decoration
        a
          &:active, &:hover, &.active
            text-decoration none

        // Back to groups list button
        .back-btn
          cursor pointer
          padding 0 15px 0 0
          font-size $font-size-large
          height $sched-nav-height
          font-weight 400
          display block
          float left

          .back-logo-square
            float left
            background $brand-info
            padding 4px
            color #fff
            .stico-groups-list
              display block

          .group-name
            margin-left 10px
          &:hover
            .back-logo-square
              background darken($brand-info, 20%)
            .group-name
              color darken($link-color, 25%)

        // Change schedule type
        .type-changer
          @media (min-width: 992px)
            display inline-block
            border 1px solid $brand-info
            border-radius $line-height-computed
            height ($sched-nav-height - 1)
            line-height ($sched-nav-height - 2)
            a
              font-size $font-size-base
              cursor pointer
              padding 8px 9px
              &.active
                background $brand-info
                border-radius $line-height-computed
                color #fff
                margin-right: -1px
                margin-left: -1px
          @media (max-width: 991px)
            display inline-block
            height $sched-nav-height
            a
              font-size $font-size-medium
              line-height $sched-nav-height
              &.active
                display none


        // Update indicator
        .schedule-updated-text
          margin 0
          padding 0
          font-size $font-size-medium
          color #ddd
          font-weight 100
          white-space nowrap
          line-height $sched-nav-height

        // Next week button
        .next-week-btn
          font-size $font-size-medium
          font-weight 200
          white-space nowrap
          margin-right -5px
          line-height $sched-nav-height

          a
            cursor pointer
            padding 5px
            span
              cursor pointer
              padding 0 7px
          .stico-arrow-right
            margin-top -2px
            vertical-align middle



  // Mobile
  .mobile
    // Navigation
    .schedule-header
      user-select(none)
      .navbar
        background #fff
        border none
        height ($sched-nav-height + 5)
        min-height 0
        margin -15px 0 0 0
        white-space nowrap
        font-size $font-size-medium
        padding 0 0 5px 0
        border-bottom 1px solid $sched-border-color
        line-height $sched-nav-height

        // Remove link decoration
        a
          &:active, &:hover, &.active
            text-decoration none

        // Back to groups list button
        .back-btn
          cursor pointer
          height $sched-nav-height
          span
            margin 0 0 0 5px
          .stico-arrow-right
            vertical-align middle

        .group-name
          margin-left 10px
          font-weight 500

        // Change schedule type
        .type-changer
          display inline-block
          height $sched-nav-height
          a
            font-size $font-size-medium
            &.active
              display none


        // Update indicator
        .nav-middle
          position relative
          .schedule-updated-text
            background #fff
            top 0
            left 0
            right 0
            margin 0
            padding 0
            font-size $font-size-medium
            color #ddd
            font-weight 100
            white-space nowrap
            position absolute