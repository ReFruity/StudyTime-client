@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

.group-sched
  .sched-nav
    user-select(none)
    position relative
    white-space nowrap
    padding-bottom 10px

    .heart-btn
      margin-top (($sched-nav-height - 30)/2)
      float left
      margin-left 15px
      position relative
      cursor pointer
      text-align center
      @media $media-max-phone
        display none
      span
        left -23px
        position absolute
        bottom -15px
        font-size $font-size-small
        padding 3px 7px
        font-weight 500
        border-radius 5px
        color lighten($text-color, 50%)


    .editor-btn
      margin-top (($sched-nav-height - 30) / 2)
      float left
      margin-left 15px
      position relative
      cursor pointer
      text-align center
      @media $media-max-phone
        display none

    .back-groups-btn
      float left

      @media $media-min-tablet
        margin-left -5px

      a
        display inline-block
        cursor pointer
        text-decoration none
        line-height $sched-nav-height
        height $sched-nav-height
        font-size $font-size-large

        .back-txt
          display none

        .stico-arrow-right
          position relative
          vertical-align middle
          z-index 10000
          margin-top -4px

        .group-txt
          margin-left 5px

        @media $media-max-phone
          font-size $font-size-medium
          padding 5px 20px 5px 5px

          .back-txt
            position relative
            z-index 1000000
            display inline
            margin-left 5px

          .group-txt
            top 5px
            color $text-color
            background #fff
            display block
            position absolute
            left 0
            right 0
            text-align center
            z-index 0

    .sched-type-switcher
      margin-left 15px
      @media $media-max-tablet
        font-size $font-size-medium
      @media $media-min-desktop
        border 1px solid lighten($brand-info, 80%)
        border-radius $sched-nav-height
      @media $media-min-tablet
        float left
      @media $media-max-phone
        position relative
        z-index 1
        float right

      a
        display inline-block
        background #fff
        @media $media-max-phone
          padding 5px 10px 5px 20px
        @media $media-max-tablet
          line-height $sched-nav-height
        @media $media-min-desktop
          border-radius $sched-nav-height
          padding (($sched-nav-height - $line-height-computed)/2) 10px
        &.current
          background $brand-info
          color #fff
          text-decoration none
          cursor default
          @media $media-max-tablet
            display none

    .sched-update-indicator
      float left
      font-size $font-size-medium
      color #aaa
      font-weight 100
      position absolute
      left 0
      right 0
      text-align center
      z-index -1
      line-height $sched-nav-height


    .sched-week-switcher
      float right
      font-size $font-size-medium
      font-weight 200

      @media $media-max-phone
        display none

      &.feature a
        width 85px
      a
        display inline-block
        cursor pointer
        text-decoration none
        line-height $sched-nav-height
        height $sched-nav-height
        span
          cursor pointer
        &:first-child
          text-align left
          &>span
            margin-left 5px
        &:last-child
          text-align right
          &>span
            margin-right 5px
      .stico-arrow-right
        margin-top -3px
        vertical-align middle
