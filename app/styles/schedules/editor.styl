@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

$info-nav-bg ?= darken($brand-info-bg, 5%)
$info-nav-height ?= 40px


.event-editor
  background $brand-info-bg
  margin-bottom 20px
  position relative
  border-bottom 2px solid darken($brand-info-bg, 5%)

  .editor-row
    //padding 0 15px
    margin-bottom -15px

  textarea#descr
    height 60px
    resize none

  .select-cell
    text-align center
    &>span
      margin-top 30px
      margin-bottom 20px
      display block
      text-align center
      font-size $font-size-medium
    i
      color lighten($text-color, 50%)
      font-weight 500
      text-align left
      font-style normal
      padding 5px 10px
      margin-bottom 25px

  .preview
    .enter
      color lighten($text-color, 50%)
      font-size $font-size-medium
      font-weight 300

    &> div
      margin-bottom 10px
      padding-left 25px
      padding-right 0px
      i
        float left
        margin-left -45px
        margin-top -6px

    .comma
      margin-right 6px

    .subject
      margin-bottom 15px

      .enter
        font-size $font-size-large
        font-weight 500
        margin-left -70px

      h3
        margin 6px 0 10px -40px
        padding 0
        .name
          font-size $font-size-large
          font-weight 500

        .type
          font-size $font-size-medium
          font-weight 300
          margin-left 10px
          color lighten($text-color, 50%)

    .text
      font-weight 300
      color lighten($text-color, 40%)

    .value-itm
      color lighten($text-color, 20%)
      font-size $font-size-medium
      font-weight 400

  .thanks-wnd
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background $brand-info-bg
    text-align center
    .wrapper
      margin-top -130px
      top 50%
      margin-left -175px
      left 50%
      text-align center
      position absolute
      width 350px
      height 250px

      h2
        font-size $font-size-large*2

      p
        margin 30px 0

      .notify
        background $brand-primary
        color #fff
        padding 10px 20px

    .buttons
      position absolute
      left 0
      right 0
      bottom 0
      height 54px
      border-top 2px solid darken($brand-info-bg, 12%)
      background darken($brand-info-bg, 5%)
      padding 15px
      a
        padding 10px 20px
        margin-left 20px
        background $brand-info
        color #fff


  .editor-switcher
    margin-bottom 18px
    ul
      height $info-nav-height
      overflow hidden
      background $info-nav-bg
      list-style-type none
      margin 0
      padding 0

      li:first-child + li
        border-left 1px solid $brand-info-bg
        border-right 1px solid $brand-info-bg

      li
        float left
        text-align center
        width 33.3333%
        height $info-nav-height
        line-height $info-nav-height
        a
          text-decoration none
          display block
          i
            vertical-align middle
            margin-top -1px
          span
            margin-left 5px
            vertical-align middle

        &.current
          a
            color #fff
            background $brand-info

