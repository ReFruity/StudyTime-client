@import "../_variables"


@media $media-max-phone
  .tests-and-exams
    font-size $font-size-medium

    .no-exams
      font-weight 300
      color lighten($text-color, 50%)
      text-align center

    .session-part
      h2
        font-size $font-size-medium
        font-weight 600
        margin-top 15px
        display none

      .started
        opacity 0.4
        & *
          text-decoration none !important
          color #aaa !important

      .info
        padding 0
        border-bottom 1px solid $sched-border-color

        & *:hover
          text-decoration none
          .name
            text-decoration underline

        a
          display block
          padding 9px 0

          .date
            font-size $font-size-large
            font-weight 500
            color $brand-primary

          .time
            font-weight 300
            color $brand-primary
            padding-left 15px

          .name
            display block
            font-weight 400
            &:hover
              text-decoration underline

          .teacher
            font-weight 300
            color lighten($brand-primary, 70%)

          .audit
            color $brand-info
            padding-left 15px
            font-weight 500


