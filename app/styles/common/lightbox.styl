@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

#lightbox
  position relative
  visibility hidden
  z-index 10000000
  display block
  opacity 0

  &.enable-animation
    transition(all 0.2s ease-out)

  .container
    padding 0
    @media $media-min-tablet
      width 768px

  .glow
    background-color $brand-primary
    position fixed
    opacity 0.8
    left 0
    right 0
    top 0
    bottom 0
    @media $media-max-phone
      display none

  &>.wrap
    overflow auto
    position fixed
    right 0
    bottom 0
    left 0
    height 100%
    top 0

    &>.wrap
      height 100%
      min-height 300px
      min-width 300px
      position relative
      width 100%

      &>.close-wrap
        cursor pointer
        position absolute
        translate3d(0,0,0)
        @media $media-min-tablet
          top 0
          right 0
          bottom 0
          left 0
        @media $media-max-phone
          z-index 10000
          right 0
          top 0

        &>.close
          position absolute
          cursor pointer
          opacity 0.4
          z-index 100000
          @media $media-min-tablet
            color #fff
            right 25px
            top 0px
          @media $media-max-phone
            color $link-color
            width 110px
            right 0
            top -10px

          .text
            display inline-block
            font-size $font-size-medium
            font-weight 300
            vertical-align middle
            margin-top 5px
          .arrow
            margin-left 10px
            font-weight 700
            font-size 35px
            vertical-align middle

        &:hover
          .close
            opacity 1

      &>.lb-content
        translate3d(0,0,0)
        padding 20px
        background-color #fff
        position absolute
        z-index 1000
        @media $media-min-tablet
          top 50%
          left 50%
        @media $media-max-phone
          margin 0 !important
          width 100%
          height 100%



.lightbox-showed
  #lightbox
    visibility visible
    opacity 1


