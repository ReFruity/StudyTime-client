@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

#lightbox
  position relative
  visibility hidden
  z-index 10000000
  display block
  opacity 0

  &.enable-animation
    transition(all 0.2s ease-out)

  @media $media-max-phone
    display none

  .glow
    background-color $brand-primary
    position fixed
    opacity 0.8
    left 0
    right 0
    top 0
    bottom 0

  &>.wrap
    height 100%
    overflow auto
    position fixed
    top 0
    right 0
    bottom 0
    left 0

    &>.wrap
      height 100%
      min-height 300px
      min-width 300px
      position relative
      width 100%

      &>.close-wrap
        cursor pointer
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        translate3d(0,0,0)

        &>.close
          position absolute
          top 0px
          right 25px
          color #fff
          cursor pointer
          opacity 0.4
          z-index 100000
          .text
            display inline-block
            font-size $font-size-medium
            font-weight 300
            vertical-align middle
            margin-top 5px
          .arrow
            margin-left 10px
            font-weight 700
            font-size 35px
            vertical-align middle

        &:hover
          .close
            opacity 1

      &>.lb-content
        translate3d(0,0,0)
        padding 20px
        background-color #fff
        position absolute
        top 50%
        left 50%
        z-index 1000



.lightbox-showed
  #lightbox
    visibility visible
    opacity 1


