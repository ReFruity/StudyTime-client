@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

// Custom desktop navigation
header
  user-select(none)
  padding-top: 10px
  nav
    border 0 !important
    height $navbar-height
    overflow hidden
    white-space nowrap
    .brand
      float left
      a
        display block
        cursor default
        text-decoration none !important
        font-size $font-size-large
        i
          vertical-align middle
        span
          color $text-color
          vertical-align middle
          margin-left 15px

    .navbar
      float right
      ul
        float right
        overflow hidden
        background $brand-info-bg
        list-style-type none
        margin 0
        padding 0
        li
          float left
          position relative
          text-align center
          a
            text-align center
            position relative
            display block
            padding (($navbar-height - $line-height-computed)/2) 25px
            &:hover
              background $navbar-default-link-hover-bg
            i
              display none

          &.login-wrap > span
              position relative
              display block
              background lighten($brand-warning, 15%)
              padding (($navbar-height - $line-height-computed)/2) 9px
              color #fff
              cursor pointer
              &:hover
                text-decoration underline

          &.active
            a
              background $navbar-default-link-active-bg
              color $navbar-default-link-active-color
              text-decoration none

    .spin-logo
      vertical-align middle
      display block
      float left
      -webkit-animation: spin 2s infinite linear;
      -moz-animation: spin 2s infinite linear;
      -ms-animation: spin 2s infinite linear;
      -o-animation: spin s infinite linear;
      animation: spin 2s infinite linear;

@media $media-max-tablet
  header
    nav
      .navbar
        ul
          li
            a
              padding (($navbar-height - $line-height-computed)/2) 18px

// iOS like navigation on mobile
@media $media-max-phone
  header
    padding-top 0

    nav
      padding 0 !important
      .brand
        span
          display none
        i
          margin-left 7px
          margin-top 2px

      ul
        margin 0
        position absolute
        left 57px
        right 0
        top 0

        li
          width 25%
          &.login-wrap
            display none
          a
            margin 0
            padding 6px 0 0 0 !important
            font-size $font-size-small*0.9
            i
              display inline-block !important
