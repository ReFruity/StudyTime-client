@import "../_variables"

// No navbar marging
.header
  .navbar
    margin 0

header
  padding-top: 11px
  .navbar-brand
    padding-top: 10px
    color: #4b5456
  ul.nav
    background: #f5f8fa
    li
      a
        padding: 20px 32px
        color: #4b5456
      &:hover
        a
          color: #fff
          background: #3baba1


@media $screen-tablet-media-q
  .header
    .navbar
      height $navbar-height + 2
      margin 0

    .navbar-form
      display none

    .navbar-header
      float left
      margin-right 0.3em
      .navbar-brand
        background-color $navbar-default-link-active-bg
        span
          display none
        &:after
          content "ST"

    .navbar-right
      float left !important

    .nav
      margin 0
      position absolute
      left 55px
      right 0
      i.fa
        display block
        line-height 1.2em
        font-size 2.4em
      li
        text-align center
        float left
        width 33.3333333%
        a
          margin 0
          padding 0.7em 0.5em
          background none !important
          font-size 0.7em
          line-height 1.3em

        &.active
          a
            color $theme-color !important
          i.fa
            color $theme-color