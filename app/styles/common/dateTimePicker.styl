@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

.date-time-picker
  user-select(none)

  &> div
    position relative
    &>div
      top 5px
      position absolute
      width 235px
      height 238px
      padding 5px
      z-index 1000000000
      background #fff
      border-radius 5px
      border 2px solid lighten($brand-primary, 80%)
      overflow hidden

  .header
    position relative
    text-align center
    height 35px
    overflow hidden
    &>a
      position relative
      z-index 10000
      line-height 40px
      display block
      width 20px
      font-size $font-size-large
      text-decoration none
      &:first-child
        padding 0 35px 0 3px
        float left
      &:last-child
        padding 0 21px 0 15px
        float right

    h3
      position absolute
      left 0
      right 0
      margin 0
      padding 0
      a
        display block
        line-height 35px
        font-size $font-size-medium

  .values
    a
      display block
      float left
      text-align center
      text-decoration none
      &:hover
        background $brand-info-bg
      &.current
        color #fff
        background $brand-info
      &.disabled
        cursor default
        opacity 0.5
        color $text-color
        background transparent

  .year .values a, .month .values a
    width 25%
    height 63px
    line-height 63px

  .date
    .dow-names span
      display block
      float left
      width 14.2857%
      height 20px
      font-weight 500
      text-align center
    .values a
      width 14.2857%
      height 34px
      line-height 34px

  .hours .values a
    width 20%
    height 38px
    line-height 38px

  .minutes .values a
    width 25%
    height 63px
    line-height 63px


