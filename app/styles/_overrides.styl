@import _variables
@import "/bower_components/bootstrap-stylus/stylus/mixins"

.opacity-shower-start {
  opacity 0
  transition(opacity 1s ease)
}
.opacity-shower-end {
  opacity 1
}

html, body
  height 100%

#wrap
  min-height 100%

.footer
  position: relative
  height: $footer-height
  clear: both
  border-top: 1px solid $panel-inner-border
  padding: 10px 0

@media $screen-tablet-media-q
  .footer
    display none