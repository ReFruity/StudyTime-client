@import "_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

.sr-only
  opacity 0

.has-error .form-control
  border-width 2px

form
  .form-group
    margin-top 3px

  label.sr-only
    color lighten($text-color, 40%)
    position: absolute;
    margin: -16px 1px;
    font-size $font-size-small
    font-weight 500
    opacity 1
    transition(0.3s opacity)
