@import _variables


// Needed for ng-cloak work
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display none !important

html, body
  height 100%

#wrap
  min-height 100%

.footer
  position: relative
  height: $footer-height
  clear: both
  border-top: 1px solid $panel-inner-border
  padding: 10px 0


@media $screen-tablet-media-q
  .footer
    display none