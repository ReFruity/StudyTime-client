@import "../_variables"
@import "/bower_components/bootstrap-stylus/stylus/mixins"

.invite-lightbox
  h3
    font-size $font-size-medium
    margin-top 10px

  .variants
    position relative

    .or
      color lighten($text-color, 50%)
      position absolute
      top 0
      bottom 0
      left 50%
      width 1px
      border-right 1px solid $brand-info-bg

  .email
    padding-right 20px

  .social
    text-align center

    .buttons
      a
        vertical-align middle
        display inline-block
        text-align center
        border-radius 100px
        height 50px
        width 50px
        margin 10px
        line-height 65px
        cursor pointer

        &.vk
          background $brand-success
        &.fb
          background $brand-info
        &.tw
          background $brand-warning

        &:hover
          &.vk
            background darken($brand-success, 20%)
          &.fb
            background darken($brand-info, 20%)
          &.tw
            background darken($brand-warning, 20%)