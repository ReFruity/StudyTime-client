@import '../_variables'

#schedule-index
  > .title
    margin-bottom: 40px

  .speciality
    width: 25%

  .schedule-table
    display table
    padding 0
    .schedule-row
      display table-row
      .speciality
        display table-cell
        border: 9px solid #fff
        background: #f5f8fa
        h3
          padding 34px 0 0 0
          margin 0
        .course-content
          overflow: hidden
          padding: 30px 15px 34px
          .line
            overflow: hidden
            .group
              padding 2px
              color: #839fa5
              text-decoration none
              &:hover
                color: #f16520


  .select-group-continer
    margin-top 30px
    margin-bottom: 30px

@media $screen-tablet-media-q
  #schedule-index
    .schedule-table
      display block
      .schedule-row
        display block
        .speciality
          border none
          display block
          width 100%

    &.container
      max-width 100%
      padding 0
      width 100%
      &.col-md-10
        padding 0
      .speciality
        border none
        h3
          padding 15px !important
          border-bottom 1px solid #ddd
          margin 0
          background #fff
        .course-content
          padding 0 !important
          .group
            font-size 25px

