@import '../_variables'
@import "/bower_components/bootstrap-stylus/stylus/mixins"


@media $media-min-tablet
  .faculty
    .no-groups
      .sched-uploader
        position relative

        .upld-btn-wrap
          position relative
          input
            position absolute
            z-index 1000
            left 0
            right 0
            width 130px
            height 100%
            top 0
            margin 0 auto
            opacity 0

        .upld-progress, .upld-done
          z-index 10000
          position absolute
          top 0
          bottom 0
          left 0
          right 0
          background-color rgba(255,255,255,0.9)
          text-align: center
          &:before
            content ''
            display inline-block
            height 100%
            vertical-align middle
            margin-right -0.25em
        .upld-done
          .wrap
            display: inline-block
            vertical-align: middle
        .upld-progress
          font-size $font-size-large*1.5
          color $brand-success


      .sad-text
        background $brand-info-bg
        text-align center
        padding 40px 20px
        h2
          color lighten($text-color, 50%)
        p
          font-size $font-size-medium

      .posible-things
        text-align center
        padding-top 25px
        padding-bottom 50px
        &>div
          p
            color lighten($text-color, 30%)
            padding 0 15px 10px 15px

    .admins
      padding 20px 0 0 0
      position absolute
      bottom 5px
      left 0
      right 0

      h3
        float left
        font-size $font-size-medium
        line-height 45px
        margin 0
        padding 0 10px 0 0

      .photos
        float left

      .add-admin-btn
        float left
        button
          margin 6px 0 0 10px

    .info
      h2
        position relative
        margin 0
        padding 0 0 20px 0
        text-align center
        .faculty
          text-align center
          display block
          font-size $font-size-large*2
        .uni, .full-name
          padding 0 5px
          font-size $font-size-medium
          font-weight 300
          color lighten($text-color, 50%)
        a
          display block
          position absolute
          top 3px

    .groups
      padding-bottom 80px
      .container
        display table
        width 100%
        padding 0
        margin 0

        h3
          text-align center
          padding 0 0 10px 0

        .row
          display table-row
          .speciality
            float none
            display table-cell
            padding 0
            background $brand-info-bg
            border: 9px solid #fff
            &:first-child
              border-left none
            &:last-child
              border-right none
            .spec-groups
              padding 0 20px 20px 20px
              .course
                overflow: hidden
              a
                display block
                float left
                text-decoration none
                font-size $font-size-medium
                @media $media-min-tablet
                  padding 3px 5px
                @media $media-min-desktop
                  padding 3px 10px

@media $media-max-phone
  .faculty
    .no-groups
      .sad-text
        background $brand-info-bg
        text-align center
        padding 10px 10px
        h2
          margin 10px
          color lighten($text-color, 50%)
          font-size $
          font-size-large
        p
          font-size $font-size-medium

      .posible-things
        padding 0 0 100px 0
        i
          display block
          float left
          width 70px
          margin 20px 0px 5px 0
        p
          color lighten($text-color, 30%)
          padding 0 0 10px 0
        h3
          margin 0
          padding 20px 0
          border-top 1px solid darken($brand-info-bg, 10%)
        &>div
          padding-bottom 15px
        &>div:first-child
          h3
            border-top none

    .info
      h2
        display none

    .admins
      display none

    .groups .container
      padding 0
      margin 0
      h3
        text-align center
        padding 15px
        margin 0
        font-size $font-size-medium
        border-top 1px solid #fff
        background $brand-info-bg
      .speciality
        padding 0
        .spec-groups
          padding 0
          .course
            overflow: hidden
          a
            display block
            float left
            text-decoration none
            padding 10px 20px
            font-size $font-size-medium