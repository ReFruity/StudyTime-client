@import _variables

.header
  .navbar-brand
    color: $theme-color
    a
      color: $theme-color
  .mobile-navbar
    display none

  ul.navigation
    list-style: none
    display inline-block
    li
      display inline-block
      border-bottom: 2px solid #fff
      padding 25px 20px 20px
      &:active, &:hover, &.active
        color: $theme-color
        border-bottom: 2px solid $theme-color

// todo add variable
@media(max-width: 768px)
  .header
    .mobile-navbar
      display block
      h3
        margin 0 100px
        padding: 10px
        color: $theme-color
