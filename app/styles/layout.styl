@import _variables

// Disable navigation icons
.nav
  i.fa
    display none


@media $screen-tablet-media-q
  .header
    .navbar
      height $navbar-height+2

    .navbar-form
        display none

    .navbar-header
      float left
      margin-right 0.3em
      .navbar-brand
        background-color $navbar-default-link-active-bg
        span
          display none
        &:after
          content "ST"

    .navbar-right
      float left !important

    .nav
      margin 0
      i.fa
        display block
        line-height 1.2em
        font-size 2.4em
      li
        text-align center
        float left
        a
          margin 0
          padding 0.7em 0.5em
          background none !important
          font-size 0.7em
          line-height 1.3em

        &.active
          a
            color $theme-color !important
          i.fa
            color $theme-color

