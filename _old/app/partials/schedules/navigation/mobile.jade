div(move-content-to="sched-nav-left")
div(move-content-to="sched-nav-center")
    .col-xs-4.text-center.nav-middle
        .group-name(ng-if="updated") {{$routeParams.groupName}}
        .schedule-updated-text(ng-if="!updated") {{'schedules.navigation.updating' | translate}}
div(move-content-to="sched-nav-right")
    .col-xs-4.text-right
        .type-changer(ng-if="exams > 0")
            a(ng-if="showingState == 'studies'", ng-click="showScheduleType('exams')") {{'schedules.navigation.session' | translate}}
            a(ng-if="showingState == 'exams'", ng-click="showScheduleType('studies')") {{'schedules.navigation.semestr' | translate}}